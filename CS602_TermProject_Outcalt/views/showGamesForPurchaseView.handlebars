<div>

<div class="col-md-4 col-md-offset-4">
  <form action="/store">
    <div class= "form-inline align-items-center">
        Search By Name:<br>
        <input type="text" name="gameName" class="form-control">
        <input type="submit" value="Search" class="form-control">
    </div>
  </form><br>

  <form action="/store">
    <div class="form-inline align-items-center">
        Search By Description:<br>
        <input type="text" name="gameDescription" class="form-control">
        <input type="submit" value="Search" class="form-control">
    </div>
  </form>
</div>

<div class="container">
  <div class="row">
    <div class="form-group col" >
      <form action="/store">
        <input type="submit" value="Clear Search" class="btn btn-primary"/>
      </form>
    </div>

    <div class="form-group col" >
      <form action="/customers/orders/111111111111111111111111">
        <input type="submit" value="Order History" class="btn btn-primary"/>
      </form>
    </div>

    <div class="form-group col" >
      <form action="/store">
        <input type="hidden" name="sorting" value="true" class="form-control">
        <input type="submit" value="Sort Alphabetical" class="btn btn-primary"/>
      </form>
    </div>
  </div>
</div>

  <form action="/games/new_order" method="post" class="form-group">

    <div class="table-responsive">
      <table class="table table-condensed">
      <thead>
        <tr>
          <th>Video Game Name</th>
          <th>Video Game Description</th>
          <th>More Details</th>
          <th>Video Game Price</th>
          <th>BUY</th>
          <th>How Many:</th>
        </tr>
      </thead>
      <tbody>
        {{#each data}}
          <tr>
            <td>{{this.name}}</td>
            <td>{{this.description}}</td>
            <td><a href="/details?name={{this.name}}">Details</a></td>
            <td>{{this.price}}</td>

            <td>
              <input type="checkbox" name="gameId" value={{this.id}}>
            </td>
            <td>
              <input type="text" name="gameQuantity">
            </td>

          </tr>

          {{/each}}
      </tbody>

      </table>
    </div>
    <input type="submit" value="CHECKOUT" class="btn-lg btn-success" style="display:block;margin: 0 auto;"/>

  </form>
</div>
