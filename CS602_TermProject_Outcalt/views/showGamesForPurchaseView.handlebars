  <form action="/games/new_order" method="post" class="form-group">
  <div class="table-responsive">
    <table class="table table-condensed">
    <thead>
      <tr>
        <th>Video Game Name</th>
        <th>Video Game Description</th>
        <th>Video Game Price</th>
        <th>BUY</th>
        <th>How Many:</th>
      </tr>
    </thead>
    <tbody>
      {{#each data}}
        <tr>
          <td>{{this.name}}</td>
          <!-- <input type="hidden" name="gameName" value={{this.name}}> -->
          <td>{{this.description}}</td>
          <!-- <input type="hidden" name="gameDescription" value={{this.description}}> -->
          <td>{{this.price}}</td>
          <!-- <input type="hidden" name="gamePrice" value={{this.price}}> -->

          <td>
            <input type="checkbox" name="gameId" value={{this.id}}>
          </td>
          <td>
            <input type="text" name="gameQuantity">
          </td>

        </tr>

        {{/each}}
    </tbody>

    </table>
  </div>
  <input type="submit" value="CHECKOUT" class="btn-lg btn-success" style="margin: 0 auto;"/>

  </form>
</div>
