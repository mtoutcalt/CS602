<div>
  <div class="table-responsive">
    <table class="table table-condensed table-hover">
    <thead>
      <tr>
        <th>Customer First Name</th>
        <th>Customer Last Name</th>
        <th>Customer Account Name</th>
        <th>Customer Address</th>

      </tr>
    </thead>
    <tbody>

      {{#each data}}
        <tr onclick="window.location='/customers/orders/{{this.id}}';">
          <td>{{this.firstName}}</td>
          <td>{{this.lastName}}</td>
          <td>{{this.accountName}}</td>
          <td>{{this.address}}</td>

          <td>
            <a href="/customers/edit/{{this.id}}">Edit</a>
            <a href="/customers/delete/{{this.id}}">Delete</a>
          </td>
        </tr>
        {{/each}}

    </tbody>

      <tfooter>
        <tr>
          <td> <button class="btn btn-primary" onClick="addCustomer();">Add</button> </td>
        </tr>
      </tfooter>
    </table>
  </div>
</div>
