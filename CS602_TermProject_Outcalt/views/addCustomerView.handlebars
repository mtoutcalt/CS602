<div class="table-responsive">
  <form method="post" action="/customers/add">
    <table class="table table-condensed">
    <tbody>
        <tr>
          <th width="200">Customer - First Name </th>
          <td><input type="text" name="firstName" required placeholder="first name"></td>
        </tr>
        <tr>
          <th>Customer - Last Name</th>
          <td><input type="text" name="lastName" required placeholder="last name"></td>
        </tr>
        <tr>
          <th>Customer - Account Name</th>
          <td><input type="text" name="accountName" required placeholder="account name"></td>
        </tr>
        <tr>
          <th>Customer - Address</th>
          <td><input type="text" name="address" required placeholder="address"></td>
        </tr>
    </tbody>

      <tfooter>
        <tr>
          <td></td>
          <td>
            <input type="submit" value="Save" class="btn btn-success">
            <input type="button" value="Cancel" class="btn btn-danger" onclick="cancelCustomerAdd()">
          </td>
        </tr>
      </tfooter>
    </table>
  </form>
</div>
